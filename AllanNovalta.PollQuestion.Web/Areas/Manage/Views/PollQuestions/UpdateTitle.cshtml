@model AllanNovalta.PollQuestion.Web.Areas.Manage.ViewModels.PollQuestions.UpdateTitleViewModel
@{
    ViewData["Title"] = "UpdateTitle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Title</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/manage/pollquestions/update-title" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <input type="hidden" name="Id" value="@Model.Id" />
                <label for="Title">Title:</label>
                <input type="text" class="form-control" name="Title" value="@Model.Title" />
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea class="form-control" rows="4" name="Description">
                    @Model.Description
                </textarea>
            </div>
            <div class="form-group">
                <label for="PostExpiry">Post Expiry:</label>
                <input type="text" class="form-control" name="PostExpiry" id="UpdatedAt" value="@Model.PostExpiry" />
            </div>
            <div class="form-group">
                <label for="Template">Template:</label>
                <select name="TemplateName">

                    <option value="Pollquestion 1" @(Model.TemplateName == "Pollquestion 1" ? "selected" : "")>Pollquestion 1</option>
                    <option value="Pollquestion 2" @(Model.TemplateName == "Pollquestion 2" ? "selected" : "")>Pollquestion 2</option>
                    <option value="Pollquestion 3" @(Model.TemplateName == "Pollquestion 3" ? "selected" : "")>Pollquestion 3</option>
                </select>


            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

@section pageScripts{
    <script>
    $(function () {
        $("#PostExpiry").datepicker({ dateFormat: 'dd/mm/yy' });
    });
    </script>
}