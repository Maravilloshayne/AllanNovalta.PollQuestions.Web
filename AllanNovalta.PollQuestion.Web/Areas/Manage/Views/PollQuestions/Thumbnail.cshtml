@model AllanNovalta.PollQuestion.Web.Areas.Manage.ViewModels.PollQuestions.ThumbnailViewModel
@{
    ViewData["Title"] = "Thumbnail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PollQuestion Thumbnail</h2>
<div class="row">
    <div class="col-md-6">
        <form action="~/manage/pollquestions/update-thumbnail" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="PollQuestionId" value="@Model.PollQuestionId" />
                <label for="Thumbnail">Thumbnail:</label><br />
                <img src="~/pollquestions/@Model.PollQuestionId/thumbnail.png" style="width:150px;height:150px;" /></br></br>
                <input type="file" class="form-control" name="thumbnail" />
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>