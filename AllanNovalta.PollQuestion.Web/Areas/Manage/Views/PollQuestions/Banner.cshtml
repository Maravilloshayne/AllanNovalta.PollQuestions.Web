@model AllanNovalta.PollQuestion.Web.Areas.Manage.ViewModels.PollQuestions.BannerViewModel
@{
    ViewData["Title"] = "Banner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PollQuestion Banner</h2>
<div class="row">
    <div class="col-md-6">
        <form action="~/manage/pollquestions/update-banner" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="PollQuestionId" value="@Model.PollQuestionId" />
                <label for="Banner">Banner:</label><br />
                <img src="~/pollquestions/@Model.PollQuestionId/banner.png" style="max-width:750px;max-height:300px;" /></br></br>
                <input type="file" class="form-control" name="banner" />
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>